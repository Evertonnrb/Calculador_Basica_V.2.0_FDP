<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.fabricadeprogramador.calculadorafpd.MainActivity"
    android:background="#a23131"
    android:padding="0dp">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="151dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ffffff"
        android:autoText="true"
        android:gravity="bottom|right"
        android:textSize="70dp"
        android:textStyle="normal" />

    <Button
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:text="7"
        android:id="@+id/btn7"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_margin="0dp"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="normal"
        android:background="#423d3d"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:text="8"
        android:id="@+id/btn8"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="normal"
        android:background="#423d3d"
        android:layout_alignTop="@+id/btn7"
        android:layout_toRightOf="@+id/btn7"
        android:layout_toEndOf="@+id/btn7"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:text="9"
        android:id="@+id/btn9"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="normal"
        android:background="#423d3d"
        android:layout_alignTop="@+id/btn8"
        android:layout_toRightOf="@+id/btn8"
        android:layout_toEndOf="@+id/btn8"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:text="5"
        android:id="@+id/btn5"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="normal"
        android:background="#423d3d"
        android:layout_below="@+id/btn8"
        android:layout_toLeftOf="@+id/btn9"
        android:layout_toStartOf="@+id/btn9"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:text="4"
        android:id="@+id/btn4"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="normal"
        android:background="#423d3d"
        android:layout_alignBottom="@+id/btn5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:text="6"
        android:id="@+id/btn6"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="normal"
        android:background="#423d3d"
        android:layout_alignBottom="@+id/btn5"
        android:layout_alignLeft="@+id/btn9"
        android:layout_alignStart="@+id/btn9"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:text="1"
        android:id="@+id/btn1"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="normal"
        android:background="#423d3d"
        android:layout_below="@+id/btn5"
        android:layout_toLeftOf="@+id/btn5"
        android:layout_toStartOf="@+id/btn5"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:text="2"
        android:id="@+id/btn2"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="normal"
        android:background="#423d3d"
        android:layout_alignBottom="@+id/btn1"
        android:layout_toLeftOf="@+id/btn6"
        android:layout_toStartOf="@+id/btn6"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:text="3"
        android:id="@+id/btn3"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="normal"
        android:background="#423d3d"
        android:layout_alignTop="@+id/btn2"
        android:layout_alignRight="@+id/btn6"
        android:layout_alignEnd="@+id/btn6"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:text="C"
        android:id="@+id/btnClear"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="normal"
        android:background="#423d3d"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/btn2"
        android:layout_toStartOf="@+id/btn2"
        android:onClick="onClickClear" />

    <Button
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:text="0"
        android:id="@+id/btn0"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="normal"
        android:background="#423d3d"
        android:layout_alignBottom="@+id/btnClear"
        android:layout_toRightOf="@+id/btnClear"
        android:layout_toEndOf="@+id/btnClear"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:text="="
        android:id="@+id/btnIgual"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="normal"
        android:background="#423d3d"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/btn3"
        android:layout_alignStart="@+id/btn3"
        android:onClick="onClickEquals" />

    <Button
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:text="+"
        android:id="@+id/btnSoma"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="normal"
        android:background="#423d3d"
        android:layout_alignTop="@+id/btn9"
        android:layout_toRightOf="@+id/btn9"
        android:layout_toEndOf="@+id/btn9"
        android:onClick="onClickOperator" />

    <Button
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:text="-"
        android:id="@+id/btnSub"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="normal"
        android:background="#423d3d"
        android:layout_below="@+id/btnSoma"
        android:layout_toRightOf="@+id/btn9"
        android:onClick="onClickOperator" />

    <Button
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:text="*"
        android:id="@+id/btnMult"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="normal"
        android:background="#423d3d"
        android:layout_below="@+id/btnSub"
        android:layout_toRightOf="@+id/btn9"
        android:onClick="onClickOperator" />

    <Button
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:text="/"
        android:id="@+id/btnDiv"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="normal"
        android:background="#423d3d"
        android:layout_below="@+id/btnMult"
        android:layout_toRightOf="@+id/btn9"
        android:onClick="onClickOperator" />
</RelativeLayout>
